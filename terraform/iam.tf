# INTENTIONALLY INSECURE: Overly permissive IAM role for MongoDB EC2
resource "aws_iam_role" "mongodb_ec2" {
  name = "${var.project_name}-mongodb-ec2-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Principal = {
          Service = "ec2.amazonaws.com"
        }
      }
    ]
  })

  tags = {
    Name = "${var.project_name}-mongodb-ec2-role"
  }
}

# VULNERABILITY: Excessive permissions - can create VMs and more
resource "aws_iam_role_policy" "mongodb_ec2_policy" {
  name = "${var.project_name}-mongodb-ec2-policy"
  role = aws_iam_role.mongodb_ec2.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "ec2:*",
          "s3:*",
          "iam:*",
          "lambda:*"
        ]
        Resource = "*"
      }
    ]
  })
}

resource "aws_iam_instance_profile" "mongodb_ec2" {
  name = "${var.project_name}-mongodb-ec2-profile"
  role = aws_iam_role.mongodb_ec2.name
}

